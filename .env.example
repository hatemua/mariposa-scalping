# Database
MONGODB_URI=mongodb://localhost:27017/mariposa-scalping

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TIMEOUT=5000
REDIS_RETRY_ATTEMPTS=3

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Binance API (for market data)
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret

# Together AI
TOGETHER_AI_API_KEY=your-together-ai-api-key

# Server
PORT=3001
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=300
RATE_LIMIT_BLOCK_DURATION=30

# Endpoint-Specific Rate Limits
AI_ANALYSIS_RATE_LIMIT=20
MARKET_DATA_RATE_LIMIT=60
AUTH_RATE_LIMIT=5

# Development Rate Limiting (multiplier for higher limits in dev mode)
DEVELOPMENT_RATE_LIMIT_MULTIPLIER=10

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Backend URL (for server-side API calls)
BACKEND_URL=http://localhost:3001/api

# For production, use:
# BACKEND_URL=https://scalping.backend.mariposa.plus/api

# Email Service (Namecheap Private Email)
EMAIL_HOST=mail.privateemail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your-email@yourdomain.com
EMAIL_PASS=your-email-password